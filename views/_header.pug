header.header
    nav.nav.nav--tours
        a(href='/' class='nav__el') All tours
    div.header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
    nav.nav.nav--user
        if user 
            a(href='#' class='nav__el') My bookings
            button(class='nav__el nav__el--logout') Log out
            a(href='#' class='nav__el')
                img(src=`img/users/${user.photo}` alt='User photo' class='nav__user-img')
                span #{user.name}
            a(href='#' class='nav__el')
        else 
            a.nav__el(href='/login') Log in
            a.nav__el.nav__el--cta(href='/signup') Sign up
